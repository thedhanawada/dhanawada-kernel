% Article styles for memoir class
\ProvidesPackage{memoir-article-styles}

% Define kjh page style
\makepagestyle{kjh}
\makeevenhead{kjh}{\small\textsc{\myauthor}}{}{\small\textsc{\mytitle}}
\makeoddhead{kjh}{\small\textsc{\myauthor}}{}{\small\textsc{\mytitle}}
\makeevenfoot{kjh}{}{\small\thepage}{}
\makeoddfoot{kjh}{}{\small\thepage}{}

% Define kjhgit page style (for first page)
\makepagestyle{kjhgit}
\makeevenhead{kjhgit}{}{}{}
\makeoddhead{kjhgit}{}{}{}
\makeevenfoot{kjhgit}{}{}{}
\makeoddfoot{kjhgit}{}{}{}

% Basic article formatting
\makeevenhead{headings}{\small\textsc{\myauthor}}{}{\small\textsc{\mytitle}}
\makeoddhead{headings}{\small\textsc{\myauthor}}{}{\small\textsc{\mytitle}}
\makeevenfoot{headings}{}{\small\thepage}{}
\makeoddfoot{headings}{}{\small\thepage}{}

% Section formatting
\setsecheadstyle{\Large\bfseries}
\setsubsecheadstyle{\large\bfseries}
\setsubsubsecheadstyle{\normalsize\bfseries}

% Spacing
\setlength{\parindent}{0pt}
\setlength{\parskip}{6pt}

% Title formatting
\pretitle{\begin{center}\LARGE\bfseries}
\posttitle{\end{center}}
\preauthor{\begin{center}\large}
\postauthor{\end{center}}
\predate{\begin{center}\normalsize}
\postdate{\end{center}}